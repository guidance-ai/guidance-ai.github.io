---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Not Found">
  <div class="flex h-screen items-center justify-center bg-gray-50">
    <div class="text-center">
      <h1 class="text-4xl font-bold text-gray-800">404</h1>
      <p class="text-lg text-gray-600">Oops! The page you're looking for doesn't exist.</p>
      <a href="/" class="mt-4 inline-block px-6 py-3 bg-blue-500 text-white rounded-md hover:bg-blue-600">
        Go Back Home
      </a>
    </div>
  </div>
</Layout>
